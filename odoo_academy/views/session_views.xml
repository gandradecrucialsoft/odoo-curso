<?xml version ="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="session_view_form">
			<field name="name">academy.session.form</field>
			<field name="model">academy.session</field>
			<field name="arch" type="xml">
				<form string="Session Form">
					<sheet>
						<h1><field name="name"/></h1>
						<group>
							<group>
								<field name="course_id"/>
								<field name="instructor_id"/>
                                <field name="state"/>
							</group>
							<group>
								<field name="start_date"/>
								<field name="end_date"/>
								<field name="duration"/>
							</group>
						</group>
						<notebook>
							<page string="Students">
								<field name="student_ids"/>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
    		</record>
    		<record model="ir.ui.view" id="session_view_list">
			<field name="name">academy.session.list</field>
			<field name="model">academy.session</field>
			<field name="arch" type="xml">
				<tree string="Session List">
					<field name="name"/>
					<field name="instructor_id"/>
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="session_view_calendar">
			<field name="name">academy.session.calendar</field>
			<field name="model">academy.session</field>
			<field name="arch" type="xml">
				<calendar string="Session Calendar" date_start="start_date" date_stop="end_date" color="instructor_id" mode="month">
					<field name="name"/>
					<field name="instructor_id"/>
				</calendar>
			</field>
		</record>
        
        
        <record model="ir.ui.view" id="session_view_gantt">
            <field name="name">academy.session.gantt</field>
            <field name="model">academy.session</field>
            <field name="arch" type="xml">
                <gantt 
                    date_start="start_date"
                    date_stop="end_date"
                    default_group_by="course_id"
                    default_scale="month"
                    color="instructor_id"
                    scales="day,week,month,year"
                    precision="{'day': 'hour:full', 'week': 'day:full', 'month': 'day:full', 'year': 'day:full'}"
                >
                    <field name="course_id"/>
                    <templates>
                        <div t-name="gantt-popover" class="container-fluid">
                           <div class="row no-gutters">
                               <div class="col">
                                   <ul class="pl-1 mb-0">
                                       <li>
                                           <strong>Start Date:</strong>
                                           <t t-esc="userTimezoneStartDate.format('YYYY-MM-DD hh:mm:ss A')"/>
                                       </li>
                                       <li>
                                           <strong>Stop Date:</strong>
                                           <t t-esc="end_date.format('YYYY-MM-DD hh:mm:ss A')"/>
                                       </li>
                                   </ul>
                               </div>
                           </div>
                        </div>
                    </templates>
                </gantt>
            </field>
        </record>
        
        <record model="ir.ui.view" id="session_view_kanban">
            <field name="name">academy.session.kanban</field>
            <field name="model">academy.session</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="instructor_id"/>
                    <field name="duration"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <img class="o_kanban_image" alt="Avatar" t-att-src='_s+"/base/static/img/avatar.png"'></img>
                                <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="o_kanban_tag_section"/>
                                    <ul>
                                        <li>Instructor: <field name="instructor_id"/></li>
                                        <li>Duracion: <field name="duration"/></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="view_cohort_cohort" model="ir.ui.view">
            <field name="name">academy.session.cohort</field>
            <field name="model">academy.session</field>
            <field name="arch" type="xml">
                <cohort string="Cohort records" date_start="start_date" date_stop="end_date" interval="day" mode="churn"/>
            </field>
        </record>
  	</data>
</odoo>
