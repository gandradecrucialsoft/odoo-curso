<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action cursos -->
        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Cursos</field>
            <field name="res_model">academy.course</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                     Creando el primer curso.
                </p>
            </field>
        </record>
	<!-- Action session -->
	<record model="ir.actions.act_window" id="session_list_action">
            <field name="name">Sessions</field>
            <field name="res_model">academy.session</field>
            <field name="view_mode">tree,form,calendar,gantt</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                     Creando el primer session.
                </p>
            </field>
        </record>
      
        <!-- MenÃº principal superior -->
        <menuitem name="Academia Odoo"
                  id="menu_academy"
				  web_icon="odoo_academy,image/CS.png"
                  sequence="1"/>

        <menuitem id="menu_academy_sub" name="Academia Odoo" parent="menu_academy" sequence="2"/>
    
        <menuitem id="menu_academy_courses" name="Cursos" parent="menu_academy_sub" sequence="3"
                  action="course_list_action"/>
	<menuitem id="menu_academy_sessions" name="Sessions" parent="menu_academy_sub" sequence="4"
                  action="session_list_action"/>

    </data>
</odoo>
